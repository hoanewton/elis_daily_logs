<h1>Listing days</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Status</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @days.each do |day| %>
      <tr>
        <td><%= day.date %></td>
        <td><%= day.title %></td>
        <td><%= day.status %></td>
        <td><%= day.note %></td>
        <td><%= link_to 'Show', day_path(day) %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day_path(day), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

