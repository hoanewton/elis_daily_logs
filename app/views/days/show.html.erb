<!-- <button><a href="#">Add Event</a></button> -->
<h2><%= @baby.first_name %>'s day</h2>
<%= image_tag @baby.photo.url(:thumb) %>  
<button class='btn btn-primary day-summary float-right'>Day Summary</button>
<button class='btn btn-success float-right'><%= link_to "All Days", baby_path(@baby) %></button>
<hr>
<div class="table-responsive">
  <table class="table">
  	<thead>
	    <tr class="active">
	      <th>Date</th>
	      <th>Title</th>
	      <th>Status</th>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	    	<td class="success"><%= @day.date.to_date %></td>
	    	<td class="warning"><%= @day.title %></td>
	    	<td class="danger"><%= @day.status %></td>
	    </tr>
	   </tbody>
  </table>
</div>
<div>
	<%= render 'events/form'%>
</div>

<div class="table-responsive">
  <table class="table">
	  <thead>
	    <tr class='active'>
	      <th>Start</th>
	      <th>End</th>
	      <th>Description</th>
	      <th>Comment</th>
	      <th>Action</th>
	    </tr>
	  </thead>
	  <tbody>
	  <% @day.events.sort_by	{ |event| event.start_time }.each do |event| %>
	   	<% @event = event %>

	      <tr class="active">
	      	<td class="active"><%= @event.start_time.strftime('%I:%M %p') %></td>
				  <td class="success"><%= @event.end_time.strftime('%I:%M %p') %></td>
				  <td class="info"><%= @event.description %></td>
				  <td class="warning"><%= @event.comment %></td>
				  <td class="active"><%= link_to 'Edit', edit_event_path(@event),:class =>"btn btn-warning" %> <%= link_to 'Destroy', @event,:class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
  </table>
</div>
