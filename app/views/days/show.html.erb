<button><a href="#">Add Event</a></button>

<h2><%= @baby.first_name %> <%= @baby.last_name %>'s day</h2>
<%= image_tag @baby.photo.url(:thumb) %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @day.date.to_date %>
</p>

<p>
  <strong>Title:</strong>
  <%= @day.title %>
</p>

<p>
  <strong>Status:</strong>
  <%= @day.status %>
</p>

<p>
  <strong>Note:</strong>
  <%= @day.note %>
</p>

<button><%= link_to 'Edit Day', edit_day_path(@day) %></button>
<button><%= link_to 'Back', baby_path(@baby) %></button><hr>

<div class="table-responsive">
  <table class="table">
    <table class='table'>
		  <thead>
		    <tr>
		      <th>Start</th>
		      <th>End</th>
		      <th>Description</th>
		      <th>Comment</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		   <% @day.events.each do |event| %>
		   	<% @event = event %>
		      <tr class="active">
		      	<td class="active"><%= @event.start_time.strftime('%H:%M %p') %></td>
					  <td class="success"><%= @event.end_time.strftime('%H:%M %p') %></td>
					  <td class="warning"><%= @event.description %></td>
					  <td class="info"><%= @event.comment %></td>
					  <td class="danger"><%= link_to 'Edit', edit_event_path(@event) %> | <%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
					<tr class="success">...</tr>
					<tr class="warning">...</tr>
					<tr class="danger">...</tr>
					<tr class="info">...</tr>
		    <% end %>
		  </tbody>
		</table>
		<br>
  </table>
</div>